<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:scaleType="fitStart"
        android:src="@drawable/new_you_background" />

    <TextView
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginUsernameField"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="80dp"
        android:background="#39000000"
        android:fontFamily="@font/berkshire_swash"
        android:padding="12dip"

        android:text="Enter a username: "
        android:textColor="#ffffffff"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/loginUsernameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"

        android:background="#39000000"
        android:padding="12dip"
        android:textColor="#ffffffff"

        android:layout_above="@id/Username" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PasswordField"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="-100dp"
        android:background="#39000000"
        android:fontFamily="@font/berkshire_swash"
        android:padding="12dip"

        android:text="Enter a password: "
        android:textColor="#ffffffff"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/PasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="-180dp"

        android:background="#39000000"
        android:padding="12dip"
        android:textColor="#ffffffff"

        />

    <ImageButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginUsernameField"

        android:layout_gravity="center_horizontal|center_vertical"

        android:background="#AA000000"
        android:padding="12dip"
        android:layout_marginBottom="-80dip"

        android:src="@drawable/floral_arrow"
        android:textColor="#997379" />


</merge>